/* pages/mespersonner/mespersonner.wxss */

.group-type {
  margin: 20rpx auto;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.group-list {
  margin: 0 auto;
  width: 92%;
}

.group-item {
  margin-bottom: 30rpx;
  display: flex;
}

.content {
  padding-left: 24rpx;
  display: flex;
  width: 464rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
}

.content view {
  font-size: 30rpx;
  text-align: left;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.all_select {
  margin: 0 auto;
  display: flex;
  align-items: center;
  width: 92%;
  font-size: 30rpx;
  color: #666;
  height: 100rpx;
}

.btom-btns {
  margin: 0 auto;
  width: 80%;
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 170rpx;
}

.btom-btns view {
  width: 190rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 60rpx;
  font-size: 31rpx;
}

.btom-btns view.ignore {
  border: 1px solid #b5b5b5;
  color: #666;
}

.btom-btns view.solve {
  background-color: #e95207;
  border: 1px solid #e95207;
  color: #fff;
}

.upload_file {
  margin: 100rpx auto;
  width: 70%;
  display: flex;
  align-items: center;
}

.upload_file image {
  width: 38rpx;
  height: 30rpx;
}

.upload_file text {
  margin-left: 14rpx;
  font-size: 30rpx;
  color: #75baff;
}
