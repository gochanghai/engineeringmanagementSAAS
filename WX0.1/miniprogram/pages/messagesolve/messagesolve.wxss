/* pages/messagesolve/messagesolve.wxss */

.container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f0880c;
}

.message_solve {
  position: relative;
  padding: 25rpx;
  margin: 30rpx auto;
  width: 85%;
  border-radius: 20rpx;
  background-color: #fff;
}

.arc {
  position: absolute;
  left: -3%;
  bottom: 200rpx;
  width: 106%;
  display: flex;
  justify-content: space-between;
}

.arc text {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  background-color: #f0880c;
}

.mes-title {
  font-size: 30rpx;
  color: #666;
  font-weight: Medium;
}

.mes-container {
  margin-top: 12rpx;
  font-size: 29rpx;
  line-height: 50rpx;
  color: #666;
}

.createdAt, .mes_type {
  margin-top: 50rpx;
}

.mes-content {
  margin-top: 20rpx;
  /* border: 1px solid; */
}

.mes-content view.item {
  /* border: 1px solid; */
  height: 80rpx;
  line-height: 80rpx;
  font-size: 27rpx;
}

.mes-content view.item text {
  display: inline-block;
  width: 110rpx;
  text-align: justify;
  text-align-last: justify;
}

.btom-btns {
  width: 90%;
  margin: 0 auto;
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 150rpx;
}

.btom-btns view {
  width: 190rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 60rpx;
  font-size: 31rpx;
}

.btom-btns view.ignore {
  border: 1px solid #b5b5b5;
  color: #666;
}

.btom-btns view.solve {
  background-color: #e95207;
  border: 1px solid #e95207;
  color: #fff;
}

.text-flex {
  display: flex;
}

.text-flex text {
  display: flex;
}

.con {
  padding-top: 14rpx;
  display: inline-block;
  width: 480rpx;
  line-height: 50rpx;
}
