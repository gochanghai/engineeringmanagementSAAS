}

.input-item image {
  position: absolute;
  margin-top: 28rpx;
  margin-left: 34rpx;
  width: 26rpx;
  height: 33rpx;
}

.login {
  position: absolute;
  bottom: 110rpx;
  left: 50%;
  margin-left: -275rpx;
  width: 550rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  border-radius: 60rpx;
  background: linear-gradient(to right, #e95207, #f0880c);
  box-shadow: 0rpx 10rpx 10rpx #dadada;
}

.forgetpwd {
  position: absolute;
  bottom: 50rpx;
