/* pages/login/login.wxss */

.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #efefef;
}

.bg-con {
  position: absolute;
  width: 100%;
}

.bg-img {
  width: 100%;
  height: 1020rpx;
}

.bg-txt {
  position: absolute;
  top: 130rpx;
  left: 50rpx;
  display: block;
  font-size: 35rpx;
  color: #fff;
}

.bg-txt text {
  font-size: 28rpx;
}

.content {
  position: absolute;
  top: 240rpx;
  left: 50%;
  margin-left: -325rpx;
  width: 650rpx;
  height: 750rpx;
  border-radius: 26rpx;
  background-color: #fff;
  box-shadow: 0rpx 15rpx 40rpx #dadada;
}

.input-con {
  position: absolute;
  top: 182rpx;
  left: 50%;
  margin-left: -295rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 240rpx;
  width: 590rpx;
