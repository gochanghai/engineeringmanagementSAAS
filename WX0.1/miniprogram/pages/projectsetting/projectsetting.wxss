/* pages/projectsetting/projectsetting.wxss */

.information_item {
  padding-top: 30rpx;
  margin: 0 auto;
  width: 92%;
  line-height: 80rpx;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
}

.information_item text {
  display: inline-block;
  font-size: 32rpx;
  color: #333;
}

.information_item text.value {
  display: inline-block;
  flex: 1;
  text-align: right;
  color: #666;
}

.information_item input {
  flex: 1;
  padding-left: 20rpx;
  height: 78rpx;
  font-size: 32rpx;
  color: #666;
  text-align: right;
}

.information_item > view {
  width: 265rpx;
  border: 1px solid;
  font-size: 30rpx;
  color: #666;
}

.down_img {
  margin-top: 32rpx;
  margin-left: 10rpx;
  float: right;
  width: 20rpx;
  height: 14rpx;
}

.input_class {
  text-align: right;
  font-size: 32rpx;
  color: #999;
}

.btom-btns {
  margin: 0 auto;
  width: 80%;
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 80rpx;
}

.btom-btns view {
  width: 190rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 60rpx;
  font-size: 31rpx;
}

.btom-btns view.ignore {
  border: 1rpx solid #b5b5b5;
  color: #666;
}

.btom-btns view.solve {
  background-color: #e95207;
  border: 1rpx solid #e95207;
  color: #fff;
}

.picker {
  text-align: right;
  width: 467rpx;
}

.btn-hover-class {
  background-color: rgba(0, 0, 0, 0.1);
}
