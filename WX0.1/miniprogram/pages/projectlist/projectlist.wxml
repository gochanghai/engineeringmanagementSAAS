<!--项目List-->
<view class='container'>
  <scroll-view scroll-y style='height:{{WinHeight}}'>
    <view class='project-list'>
      <view class='project-item' wx:for="{{projectList}}">
        <!-- <text class='status' wx:if="{{item.status == null}}">进行中</text> -->
        <!-- <text class='status'>进行中</text> -->
        <view class='project-item-info'>
          <view class="top-inform">
            <text>{{item.ProjectAbbreviation}}</text>
            <image src='/images/red.png' class='status_img' wx:if='{{item.lightSign == 1}}'></image>
            <image src='/images/yellow.png' class='status_img' wx:if='{{item.lightSign == 2}}'></image>
            <image src='/images/green.png' class='status_img' wx:if='{{item.lightSign == 0}}'></image>
          </view>
          <view class="list1">
            <view class='info'>
              <view>合同金额</view>
              <text>{{item.totalAmount1}}</text>
            </view>
            <view class='info' data-index='{{item.projectID}}'data-type='{{item.totalAmount}}' bindtap='navConfirmVal'>
              <view>总产值</view>
              <text>￥{{item.outputValue1}}</text>
            </view>
            <view class='info' data-index='{{item.projectID}}'data-type='{{item.totalAmount}}' bindtap='navReceivble'>
              <view>总回款</view>
              <text>￥{{item.receivableAmount1}}</text>
            </view>
            <view class='info' data-index='{{item.projectID}}'data-type='{{item.totalAmount}}' bindtap='navReceivble'>
              <view>可收款</view>
              <text>￥{{item.actualReceivAmount1}}</text>
            </view>
            <view class='worker_value'>
              <view class='manager'>
                <view class='info list1-info' data-index='{{item.projectID}}' data-type='0' bindtap='navManager'>
                  <view>管理</view>
                  <text>{{item.managerPer}}人</text>
                </view>
                <view class='info list1-info' data-index='{{item.projectID}}' data-type='1' bindtap='navManager'>
                  <view>施工</view>
                  <text>{{item.constructionPer}}人</text>
                </view>
                <view class='info list1-info' data-index='{{item.projectID}}' data-type='2' bindtap='navManager'>
                  <view>班组</view>
                  <text>{{item.group}}组</text>
                </view>
              </view>
              <view class='line-list2'></view>
              <view class='people'>
                <view class='info list2-info' data-index='{{item.projectID}}' data-type='0' bindtap='navSecurity'>
                  <view>未交底</view>
                  <text>32人</text>
                </view>
                <view class='info list2-info' data-index='{{item.projectID}}' data-type='1' bindtap='navSecurity'>
                  <view>未教育</view>
                  <text>12人</text>
                </view>
                <view class='info list2-info' data-index='{{item.projectID}}' data-type='2' bindtap='navSecurity'>
                  <view>未参保</view>
                  <text>2人</text>
                </view>
              </view>
            </view>
            <!-- <view class='line_list'></view> -->
            <view class='mes-info'>
              <view>
                <button type="default" size="mini" bindtap='openMessage'>总消息</button>
                <text wx:if='{{item.allmessage >0}}'>{{item.allmessage}}</text>
              </view>
              <view>
                <button type="default" size="mini" bindtap='openMessage'>未处理</button>
                <text wx:if='{{item.notdealmessage >0}}'>{{item.notdealmessage}}</text>
              </view>
              <view>
                <button type="default" size="mini" bindtap='openMessage'>已处理</button>
                <text wx:if='{{item.dealMessage >0}}'>{{item.dealMessage}}</text>
              </view>
            </view>
          </view>
        </view>
      </view>

