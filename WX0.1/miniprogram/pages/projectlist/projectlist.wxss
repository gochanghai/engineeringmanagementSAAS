/* pages/projectlist/projectlist.wxss */

.container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.project-list {
  margin: 24rpx auto;
  width: 92%;
}

.project-item {
  padding-left: 24rpx;
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 18rpx;
  overflow: hidden;
}

.project-item > text.status {
  float: right;
  padding: 7rpx 23rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #04c704;
  border-radius: 0 18rpx 0 18rpx;
}

.project-item-info {
  margin-top: 30rpx;
  padding-bottom: 20rpx;
}

.project-item-info > text {
  padding: 10rpx 30rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #ffa268;
  border-radius: 0 30rpx 30rpx 0;
}

.list1 {
  margin-top: 30rpx;
  font-size: 28rpx;
  line-height: 56rpx;
}

.info {
  display: flex;
}

.info view {
  width: auto;
  padding-right: 24rpx;
  color: #333;
}

.list1 text {
  display: inline-block;
  text-align: left;
  font-size: 27rpx;
  color: #666;
}

.top-inform {
  display: flex;
  align-items: center;
}

.top-inform > text {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #ffa268;
  border-radius: 0 30rpx 30rpx 0;
}

.status_img {
  display: block;
  margin: 22rpx;
  width: 42rpx;
  height: 42rpx;
}

.mes-info {
  margin: 0rpx auto;
  margin-top: 16rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.mes-info view {
  width: 33%;
  position: relative;
}

.mes-info view text {
  position: absolute;
  top: -14rpx;
  right: 50rpx;
  display: block;
  width: 50rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fefefe;
  background-color: #e95207;
  border-radius: 30rpx;
}

.worker_value {
  margin-bottom: 20rpx;
  padding: 0;
  display: flex;
}

.worker_value view.list1 {
  margin-top: 0;
}

.worker_value view.list2 {
  margin-left: 80rpx;
}

.list1-info view, .list2-info view {
  width: auto;
  padding-right: 24rpx;
}

.list1-info {
  margin-top: 0;
}

.line_list {
  width: 94%;
  margin: 0 auto;
  margin-left: 10rpx;
  margin-bottom: 23rpx;
  border-bottom: 1px solid #e5e5e5;
}
