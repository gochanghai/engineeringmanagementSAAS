/* pages/message/message.wxss */

.container {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #f2f2f2;
}

.tab {
  width: 92%;
  height: 90rpx;
  margin: 0 auto;
  padding-top: 16rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 6rp 6rpx 0 0;
}

.tab view.tab-item {
  position: relative;
  width: 250rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 2rpx solid #e5e5e5;
  display: block;
  font-size: 30rpx;
  /* overflow-x: hidden; */
}

.mes-count {
  padding: 0 12rpx;
  /* padding-left: 12rpx; *//* padding-top: 2rpx; */
  position: absolute;
  top: -20rpx;
  right: 10rpx;
  line-height: 37rpx;
  margin-left: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fefefe;
  background-color: #e95207;
  border-radius: 30rpx;
}

.tab view.one {
  border-radius: 24rpx 0 0 0;
  border-right: none;
}

.tab view.two {
  border-radius: 0 24rpx 0 0;
}

.tab-item-active {
  border: 2rpx solid #f0880c;
  background-color: #f0880c;
  color: #fff;
}

.content {
  margin: 0 auto;
  width: 92%;
}

.context-item:first-child {
  border-radius: 0 0 6rpx 6rpx;
}

.context-item {
  padding-top: 4rpx;
  margin-bottom: 20rpx;
  height: 130rpx;
  border-radius: 6rpx;
  background-color: #fff;
}

.context-item view.text {
  padding: 0 26rpx;
  display: flex;
  line-height: 75rpx;
}

.context-item view.text text.status {
  margin-right: 10rpx;
  font-size: 28rpx;
  color: #e95207;
}

.context-item view.text view.context {
  width: 524rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.context-item view.info {
  padding: 0 26rpx;
  display: flex;
  justify-content: space-between;
}

.context-item view.info text {
  display: inline-block;
  font-size: 24rpx;
  color: #999;
}

.name image {
  width: 18rpx;
  height: 18rpx;
}

.mes-center {
  /* padding: 40rpx 0; *//* border: 1px solid; */
}

.mes-list-item {
  margin: 0 auto;
  margin-bottom: 20rpx;
  width: 100%;
  overflow: hidden;
  border-radius: 6rpx;
  box-shadow: 0px 3rpx 10rpx 5rpx #f0f0f0;
  background-color: #fff;
}

.mes-title {
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
  font-size: 31rpx;
  color: #333;
}

.mes-title text {
  font-size: 27rpx;
  color: #39f;
}

.mes-container {
  margin-top: 10rpx;
  padding-bottom: 10rpx;
}

.mes-container image.status {
  margin-top: 15rpx;
  width: 76rpx;
  height: 76rpx;
}

.mes-container image.details {
  margin-left: 14rpx;
  width: 10rpx;
  height: 23rpx;
}

.progress, .security {
  position: relative;
  display: flex;
  justify-content: space-between;
}

.mes-con {
  flex: 1;
}

.mes-item-for view.mes-item {
  display: flex;
  flex: 1;
  margin-left: 20rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
  height: 90rpx;
  line-height: 90rpx;
}

.mes-item-for {
  padding-left: 26rpx;
  padding-right: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mes-item-for:last-child view.mes-item {
  border: none;
}

.mes-item-for text.content {
  display: inline-block;
  height: 90rpx;
  width: 350rpx;
  font-size: 30rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mes-item-for text.date {
  display: inline-block;
  width: 170rpx;
  font-size: 29rpx;
  color: #999;
}

.mes-item-for text.status {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  text-align: center;
  color: #fff;
  border-radius: 50%;
}

.line {
  position: absolute;
  left: 2%;
  top: 110rpx;
  width: 98%;
  height: 0;
  border-bottom: 1px solid #e5e5e5;
}

.hover-row {
  /* background-color: #e4e4e4; */
}

.background-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -387rpx;
  margin-left: -335rpx;
  padding: 26rpx 0;
  width: 670rpx;
  height: 574rpx;
  background-color: #fff;
  border-radius: 6rpx;
}

.top-detail {
  display: flex;
  align-items: center;
}

.top-detail image.close {
  /* margin-top: 20rpx; */
  margin-right: 30rpx;
  margin-left: 26rpx;
  display: block;
  float: right;
  width: 16rpx;
  height: 16rpx;
}

.top-detail view.name {
  flex: 1;
  padding-left: 36rpx;
  /* margin-top: 30rpx; */
  line-height: 50rpx;
  font-size: 30rpx;
  color: #333;
}

.modal view.info {
  padding: 0 36rpx;
  height: 46rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal view.info text {
  font-size: 24rpx;
  color: #999;
}

.modal view.context {
  padding: 26rpx 36rpx;
  font-size: 28rpx;
  color: #333;
}

.imglist {
  /* border: 1px solid; */
  padding: 0 36rpx;
  padding-right: 0;
  overflow: hidden;
  /* display: flex; *//* justify-content: space-between; */
}

.imglist > image {
  float: left;
  margin-right: 26rpx;
  margin-top: 26rpx;
  width: 130rpx;
  height: 130rpx;
}

.data-none{
  font-size: 48rpx;
  color: #cccccc;
  text-align: center;
}