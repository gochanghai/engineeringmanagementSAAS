/* pages/projectview/projectview.wxss */

.container {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #f2f2f2;
}

.top-scroll {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  height: 94rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 6rpx 6rpx 0 0;
}

.top-scroll view.item {
  margin-top: 22rpx;
  width: 16%;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.top-scroll view.item.activeFontSize {
  color: #f0880c;
}

.top-scroll view.item text.active {
  margin: 5rpx auto;
  display: block;
  width: 44rpx;
  height: 6rpx;
  background-color: #f0880c;
  border-radius: 4rpx;
}

.project-list {
  margin: 0rpx auto;
  width: 92%;
}

.project-item {
  padding-top: 8rpx;
  padding-bottom: 16rpx;
  margin-bottom: 20rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 6rpx;
}

.project-item:first-child {
  border-radius: 0 0 6rpx 6rpx;
}

.top-info {
  padding: 0 26rpx;
  display: flex;
  justify-content: space-between;
  height: 70rpx;
  line-height: 70rpx;
}

.top-info text.date {
  font-size: 28rpx;
  color: #666;
}

.top-info text.status {
  font-size: 28rpx;
  color: #e95207;
}

.line {
  margin: 8rpx auto;
  width: 92%;
  border-top: 1px solid #e5e5e5;
}

.project-context view.name {
  padding: 0 26rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
}

.project-context view.project-number {
  padding: 0 26rpx;
  font-size: 28rpx;
  color: #999;
}

.project-context view.situation {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}

.project-context view.situation text {
  padding: 0 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #666;
}
