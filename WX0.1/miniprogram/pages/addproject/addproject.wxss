/* pages/addproject/addproject.wxss */

.container {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #f0f0f0;
}

.top-progress {
  position: relative;
  display: flex;
  justify-content: space-between;
  margin: 30rpx auto;
  width: 92%;
  height: 156rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0px 10px 20px 4px #f0f0f0;
}

.one {
  margin-left: 80rpx;
}

.two {
  margin-right: 80rpx;
}

.one, .two {
  display: flex;
  flex-direction: column;
  height: 156rpx;
  width: 156rpx;
  color: #333;
  font-size: 31rpx;
  text-align: center;
}

.one image.icon, .two image.icon {
  margin-top: 30rpx;
  margin-left: 53rpx;
  width: 50rpx;
  height: 50rpx;
}

.one text, .two text {
  line-height: 60rpx;
}

.line {
  position: absolute;
  top: 16rpx;
  left: 50%;
  margin-left: -150rpx;
  width: 300rpx;
  height: 3rpx;
}

.line image {
  width: 300rpx;
  height: 3rpx;
}

.swiper-items {
  width: 92%;
  height: 490rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 10rpx;
}

.swiper-items > view {
  padding-top: 60rpx;
  padding-bottom: 16rpx;
  margin: 0 auto;
  width: 80%;
  border-bottom: 1px solid #e5e5e5;
}

.input_class {
  font-weight: Medium;
  font-size: 32rpx;
  color: #333;
}

.next {
  margin: 0 auto;
  width: 85%;
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-around;
}

.next view {
  width: 190rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 60rpx;
  font-size: 31rpx;
}

.next view.ignore {
  border: 1px solid #b5b5b5;
  color: #666;
}

.next view.solve {
  background-color: #e95207;
  border: 1px solid #e95207;
  color: #fff;
}

.information-item {
  margin-bottom: 28rpx;
  height: 284rpx;
}

.information-item view.account {
  padding: 0;
  width: 100%;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #333;
  border: none;
}

.information-item view.info-input {
  padding: 0;
  width: 70%;
  border: none;
}

.info-input input {
  margin-bottom: 26rpx;
  padding-left: 17rpx;
  font-size: 30rpx;
  height: 70rpx;
  background-color: #eee;
  color: #666;
  border-radius: 10rpx;
}

.btom-btns {
  margin: 0 auto;
  width: 85%;
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
}

.btom-btns view {
  width: 190rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 60rpx;
  font-size: 31rpx;
  background-color: #e95207;
  border: 1px solid #e95207;
  color: #fff;
}

.background-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.onfirm-bounced {
  position: fixed;
  top: 5%;
  left: 5%;
  width: 90%;
  height: 90%;
  background-color: #fff;
  border-radius: 18rpx;
}

.onfirm-bounced image {
  width: 100%;
  height: 100%;
}

.layer-information {
  position: absolute;
  top: 35%;
  width: 100%;
}

.layer-information-item {
  display: flex;
  margin: 0 auto;
  width: 80%;
  margin-bottom: 3%;
}

.layer-information-item text {
  display: inline-block;
  width: 170rpx;
  font-size: 30rpx;
  color: #333;
}

.layer-information-item view {
  flex: 1;
  font-size: 29rpx;
  color: #666;
  line-height: 45rpx;
}

.layer-btom-btns {
  position: absolute;
  bottom: 5%;
  left: 10%;
  width: 80%;
  display: flex;
  justify-content: space-around;
}

.layer-btom-btns view {
  width: 190rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 60rpx;
  font-size: 31rpx;
}

.layer-btom-btns view.ignore {
  border: 1px solid #b5b5b5;
  background-color: #fff;
  color: #666;
}

.layer-btom-btns view.solve {
  background-color: #e95207;
  border: 1px solid #e95207;
  color: #fff;
}
