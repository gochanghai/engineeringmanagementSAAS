/* pages/mycente/mycenterr.wxss */

.top-info {
  position: relative;
  width: 100%;
  height: 250rpx;
  overflow: hidden;
}

.top-info > image {
  width: 788rpx;
  height: 100%;
}

.account {
  position: absolute;
  left: 4%;
  top: 62rpx;
  display: flex;
  width: 92%;
}

.account > image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.account view.account-info {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 400rpx;
}

.account-info button.sign {
  padding: 4rpx 35rpx;
  margin-left: 0rpx;
  line-height: 50rpx;
  text-align: left;
  font-size: 30rpx;
  color: #fff;
  background-color: #ffa268;
  border-radius: 10rpx;
  overflow: hidden;
}

.account-info view {
  color: #fff;
}

.operation {
  width: 100%;
  margin: 30rpx auto;
}

.deal {
  margin: 0 auto;
  width: 92%;
  font-size: 32rpx;
  color: #666;
  line-height: 110rpx;
  border-bottom: 1px solid #e5e5e5;
}

.deal text {
  display: inline-block;
  width: 70rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fefefe;
  background-color: #e95207;
  border-radius: 30rpx;
}

.deal image.details {
  float: right;
  margin-top: 46rpx;
  width: 10rpx;
  height: 23rpx;
}

.deal image.icon {
  margin-right: 4rpx;
  margin-top: -6rpx;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.hover-row {
  background-color: #e4e4e4;
}
