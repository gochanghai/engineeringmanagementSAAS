/* pages/mycente/mycenterr.wxss */

.top-info {
  position: relative;
  width: 100%;
  height: 250rpx;
  overflow: hidden;
}

.top-info > image {
  width: 788rpx;
  height: 100%;
}

.user-info {
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0rpx auto;
  margin-top: 20rpx;
  width: 100%;
  height: 180rpx;
  border-radius: 6rpx 6rpx 0 0;
}

.user-info image {
  margin: 0 26rpx;
  margin-left: 44rpx;
  width: 130rpx;
  height: 130rpx;
}

.details {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 124rpx;
  flex: 1;
}

.details view.name {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.details view.name text {
  margin-left: 10rpx;
  padding: 4rpx 15rpx;
  font-size: 24rpx;
  color: #f0880c;
  border: 1px solid #fff;
  background-color: #fff;
  border-radius: 6rpx;
}

.details view.company, .details view.branch {
  font-size: 24rpx;
  color: #333;
}

.operation {
  width: 100%;
  margin: 30rpx auto;
}

.deal {
  margin: 0 auto;
  width: 92%;
  font-size: 28rpx;
  color: #333;
  line-height: 110rpx;
  font-weight: bold;
  border-bottom: 1px solid #e5e5e5;
}

.deal text {
  display: inline-block;
  width: 70rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fefefe;
  background-color: #e95207;
  border-radius: 30rpx;
}

.deal image.details {
  float: right;
  margin-top: 46rpx;
  width: 10rpx;
  height: 23rpx;
}

.deal image.icon {
  margin-right: 20rpx;
  margin-top: -6rpx;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.hover-row {
  background-color: #e4e4e4;
}
