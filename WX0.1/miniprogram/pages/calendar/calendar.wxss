/* 日历 */

.container {
  position: absolute;
  width: 100%;
  background-color: #f2f2f2;
}

.calendar-container {
  margin: 0 auto;
  width: 92%;
}

.calendar {
  background-color: #f2f2f2;
  padding-top: 10px;
}

.calendar-header {
  padding: 0 18%;
  font-size: larger;
  color: #999;
}

.calendar-board {
  background-color: white;
  color: #d6d6d6;
  border-radius: 6rpx;
  /* box-shadow: 0rpx 10rpx 20rpx #dadada; */
  font-weight: bold;
  font-size: 27rpx;
}

.calendar-days {
  display: flex;
  flex-direction: row;
}

.calendar-cell {
  float: left;
}

.line {
  margin: 30rpx auto;
  width: 92%;
  border-bottom: 1px solid #e5e5e5;
}

.information {
  padding-bottom: 26rpx;
  margin: 20rpx auto;
  width: 92%;
  background-color: #fff;
  border-radius: 6rpx;
}

.chooseDay {
  padding: 0 26rpx;
  font-size: 28rpx;
  color: #4a4f74;
  font-weight: bold;
  line-height: 70rpx;
}

.information_cons {
  display: flex;
  flex-direction: column;
}

.type-information {
  width: 92%;
  margin: 0 auto;
  margin-top: 26rpx;
  display: flex;
  flex-direction: row;
  /* border: 1px solid; */
}

.type-information text.title {
  display: inline-block;
  width: 150rpx;
  font-size: 29rpx;
  color: #333;
  font-weight: Medium;
}

.type-information view.content {
  width: 500rpx;
  padding: 10rpx 0;
  background-color: rgba(255, 162, 104, 0.3);
  color: #666;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: Regular;
}

.type-information view.content view {
  width: 90%;
  padding-left: 5%;
  padding-right: 5%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 60rpx;
}

.items text.status {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  text-align: center;
  border-radius: 50%;
}

.notice {
  padding: 0 24rpx;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 65rpx;
  line-height: 70rpx;
  background-color: #ffa268;
}

.notice image.notice_icon {
  width: 36rpx;
  height: 36rpx;
}

.scroll-y {
  margin: 0 24rpx;
  width: 590rpx;
  overflow: hidden;
}

.notice text.content {
  float: left;
  display: block;
  margin-left: 20rpx;
  width: auto;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 28rpx;
  color: #e95207;
  overflow: hidden;
  white-space: nowrap;
  animation: 300s wordsLoop linear infinite normal;
}

.notice image.notice_close {
  float: right;
  width: 20rpx;
  height: 20rpx;
}

@keyframes wordsLoop {
  0% {
    transform: translateX(200px);
    -webkit-transform: translateX(200px);
  }

  100% {
    transform: translateX(-100%);
    -webkit-transform: translateX(-100%);
  }
}

@-webkit-keyframes wordsLoop {
  0% {
    transform: translateX(200px);
    -webkit-transform: translateX(200px);
  }

  100% {
    transform: translateX(-100%);
    -webkit-transform: translateX(-100%);
  }
}

.hover-row {
  background-color: #e4e4e4;
}
