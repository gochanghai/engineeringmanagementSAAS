/* pages/addtask/addtask.wxss */

.add-task {
  /* border: 1px solid; */
}

.task_item {
  padding-top: 30rpx;
  margin: 0 auto;
  width: 92%;
  line-height: 80rpx;
  display: flex;
  border-bottom: 1px solid #e5e5e5;
  /* align-items: center; */
}

.task_item text {
  display: inline-block;
  width: 130rpx;
  font-size: 30rpx;
  color: #333;
}

.task_item input {
  flex: 1;
  text-align: right;
  /* border: 1px solid; */
  height: 78rpx;
  font-size: 30rpx;
  color: #999;
}

.task_item image {
  margin-top: 34rpx;
  margin-left: 10rpx;
  float: right;
  width: 20rpx;
  height: 14rpx;
}

.task_item picker {
  text-align: right;
  flex: 1;
}

.textarea_content {
  margin-left: 20rpx;
  padding: 20rpx;
  width: 72%;
  line-height: 50rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  color: #999;
  font-size: 32rpx;
}

.btom-btns {
  margin: 0 auto;
  width: 80%;
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 160rpx;
}

.btom-btns view {
  width: 190rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 60rpx;
  font-size: 31rpx;
}

.btom-btns view.ignore {
  border: 1px solid #b5b5b5;
  color: #666;
}

.btom-btns view.solve {
  background-color: #e95207;
  border: 1px solid #e95207;
  color: #fff;
}
