.information {
  /* border: 1px solid; */
}

.information_item {
  padding-top: 30rpx;
  margin: 0 auto;
  width: 92%;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
}

.information_item text {
  display: inline-block;
  font-size: 30rpx;
  color: #333;
  width: 170rpx;
}

.information_item input {
  padding-left: 17rpx;
  width: 60%;
  height: 78rpx;
  font-size: 30rpx;
  text-align: right;
  color: #999;
  flex: 1;
}

.information_item view {
  flex: 1;
  font-size: 30rpx;
  color: #999;
}

.information_item view image {
  margin-top: 32rpx;
  float: right;
  width: 20rpx;
  height: 14rpx;
}

.down_img {
  margin-left: 10rpx;
  float: right;
  width: 20rpx;
  height: 14rpx;
}

.picker {
  font-size: 32rpx;
  text-align: right;
  width: 530rpx;
}

.btom-btns {
  margin: 0 auto;
  width: 80%;
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 70rpx;
}

.btom-btns view {
  width: 190rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 60rpx;
  font-size: 31rpx;
}

.btom-btns view.ignore {
  border: 1px solid #b5b5b5;
  color: #666;
}

.btom-btns view.solve {
  background-color: #e95207;
  border: 1px solid #e95207;
  color: #fff;
}
