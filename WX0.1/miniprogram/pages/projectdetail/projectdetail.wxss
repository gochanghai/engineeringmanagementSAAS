/* pages/projectdetail/projectdetail.wxss */

.container {
  position: absolute;
  width: 100%;
  background-color: #f2f2f2;
}

.project-information {
  padding-top: 12rpx;
  padding-bottom: 20rpx;
  width: 92%;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 6rpx;
}

.project-information view.name {
  padding: 0 26rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
}

.project-information view.info {
  padding: 0 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.project-information view.info view.context {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.project-information view.info view.context text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 50rpx;
}

.project-info-icon {
  font-size: 28rpx;
  color: #333;
}

.project-info-icon image {
  margin-left: 20rpx;
  float: right;
  margin-top: 10rpx;
  width: 10rpx;
  height: 23rpx;
}

.project-content {
  padding-top: 36rpx;
  width: 92%;
  margin: 0rpx auto;
  margin-bottom: 20rpx;
  border-radius: 6rpx;
  background-color: #fff;
}

.total-team {
  position: relative;
  padding-top: 0rpx;
  margin: 0 auto;
  margin-bottom: 40rpx;
  width: 100%;
}

.flex-grild-personner {
  width: 100%;
  margin: 0 auto;
}

.total-team view.status, .message view.status, .setting view.status,
.business-account view.status, .project-info view.status {
  margin-left: 26rpx;
  padding: 10rpx 24rpx;
  display: inline;
  font-size: 28rpx;
  color: #fff;
  background-color: #ffa268;
  border-radius: 0 30rpx 30rpx 0;
}

.total-team view.flex-grild {
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.flex-grild view.item {
  padding: 20rpx 20rpx;
  width: 33%;
  text-align: center;
}

.flex-grild view.item text.type {
  display: block;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #999;
}

.flex-grild view.item text.val {
  display: block;
  font-size: 40rpx;
  color: #333;
}

.project-info {
  padding-bottom: 20rpx;
  margin: 0rpx auto;
  width: 100%;
}

.project-info view.item {
  margin: 0 auto;
  width: 92%;
  margin-bottom: 4rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #666;
}

.project-info view.item image {
  float: right;
  margin-top: -40rpx;
  width: 10rpx;
  height: 23rpx;
}

.progress {
  margin-left: 30rpx;
  width: 80%;
}

.message {
  padding-top: 10rpx;
  margin: 0rpx auto;
  width: 100%;
}

.message view.statusType, .setting view.statusType {
  margin-top: 20rpx;
}

.mes-deal {
  margin: 0 auto;
  width: 92%;
  font-size: 30rpx;
  color: #666;
  line-height: 110rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.mes-deal image {
  float: right;
  margin-top: 46rpx;
  width: 10rpx;
  height: 23rpx;
}

.setting {
  margin: 0rpx auto;
  width: 100%;
}

.hover-row {
  background-color: #e4e4e4;
}

.business-account {
  border: none;
}

.money-info view.item {
  width: 50%;
}

.background-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -356rpx;
  margin-left: -335rpx;
  width: 670rpx;
  height: 712rpx;
  background-color: #fff;
  border-radius: 6rpx;
}

.modal view.name {
  padding-left: 26rpx;
  margin-top: 60rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.modal image.close {
  display: block;
  float: right;
  width: 16rpx;
  height: 16rpx;
  padding: 30rpx;
}

.info {
  margin-top: 20rpx;
}

.info-item {
  margin-bottom: 18rpx;
  padding-left: 26rpx;
  font-size: 28rpx;
  color: #333;
}

.info-item text {
  color: #666;
  padding-right: 15rpx;
}
