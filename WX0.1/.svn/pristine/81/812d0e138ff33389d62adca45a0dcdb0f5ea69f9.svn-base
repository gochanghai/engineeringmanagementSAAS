.name image {
  width: 22rpx;
  height: 22rpx;
}

.mes-list-item {
  margin: 0 auto;
  margin-bottom: 20rpx;
  width: 93%;
  line-height: 100rpx;
  overflow: hidden;
  border-radius: 8rpx;
  box-shadow: 0px 0rpx 30rpx 10rpx #f0f0f0;
}

.mes-title {
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 90rpx;
  font-size: 34rpx;
  color: #333;
}

.mes-title text {
  font-size: 31rpx;
  color: #39f;
}

.mes-container {
  margin-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 30rpx;
  padding-bottom: 10rpx;
}

.mes-container image.status {
  margin-top: 15rpx;
  width: 76rpx;
  height: 76rpx;
}

.mes-container image.details {
  margin-top: 45rpx;
  margin-left: 14rpx;
  width: 10rpx;
  height: 23rpx;
}

.progress, .security {
  position: relative;
  display: flex;
  justify-content: space-between;
}

.mes-con {
  padding-left: 20rpx;
  flex: 1;
}

.mes-item {
  display: flex;
  line-height: 110rpx;
  border-bottom: 1px solid #e5e5e5;
}

.mes-item:nth-of-type(1) {
  border-bottom: none;
}

.mes-item:last-child {
  border: none;
}

.mes-item text.content {
  display: inline-block;
  flex: 1;
  font-size: 32rpx;
  color: #666;
}

.mes-item text.date {
  display: inline-block;
  width: 173rpx;
  font-size: 30rpx;
  color: #999;
}

.line {
  position: absolute;
  left: 2%;
  top: 110rpx;
  width: 98%;
  height: 0;
  border-bottom: 1px solid #e5e5e5;
}
