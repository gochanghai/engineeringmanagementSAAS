/* pages/managepersonnel/managepersonnel.wxss */

.top-info {
  width: 100%;
  height: 300rpx;
}

.top-info image {
  width: 100%;
  height: 100%;
}

.top-tab {
  display: flex;
  justify-content: space-between;
  width: 100%;
  position: absolute;
  top: 50rpx;
}

.top-tab view.tab-item {
  width: 33%;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}

.top-tab text.line {
  margin: 8rpx auto;
  display: block;
  width: 42%;
  height: 0;
  border-top: 6rpx solid;
  border-radius: 20px;
}

.content {
  position: absolute;
  top: 150rpx;
  width: 100%;
  height: auto;
}

.swiper-content {
  width: 100%;
}

.swiper-items {
  margin: 0 auto;
  width: 92%;
}

.t_info {
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
}

.t_info view.new-per {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: Medium;
  display: flex;
  align-items: center;
}

.new_per_img {
  margin-right: 10rpx;
  width: 30rpx;
  height: 28rpx;
}

.per_number {
  font-size: 57rpx;
  color: #fff;
}

.per_number text {
  font-size: 30rpx;
}

.information {
  margin-top: 6rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0px 20rpx 30rpx 12rpx #f0f0f0;
}

.information-item {
  padding-left: 26rpx;
  margin: 22rpx 0;
  overflow: hidden;
}

.item-line {
  margin: 0 auto;
  width: 90%;
  border-top: 1px solid #e5e5e5;
}

.information-item text {
  display: block;
  color: #333;
  font-weight: Medium;
  font-size: 33rpx;
  line-height: 60rpx;
}

.information-item view {
  color: #666;
  font-weight: Regular;
  font-size: 31rpx;
  line-height: 60rpx;
}

.information-item view.item-editor {
  float: right;
  margin-right: 30rpx;
  color: #39f;
  font-size: 28rpx;
}

.item-details {
  float: right;
  width: 14rpx;
  height: 22rpx;
  margin-top: 18rpx;
  margin-right: 32rpx;
}
