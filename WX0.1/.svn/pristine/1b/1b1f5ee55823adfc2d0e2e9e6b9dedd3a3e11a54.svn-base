/* pages/messagesolve/messagesolve.wxss */

.message_solve {
  padding: 25rpx;
  margin: 20rpx auto;
  width: 85%;
  box-shadow: 0px 10rpx 30rpx 12rpx #f0f0f0;
  border-radius: 20rpx;
}

.mes-title {
  font-size: 33rpx;
  color: #666;
  font-weight: Medium;
}

.mes-container {
  margin-top: 12rpx;
  font-size: 31rpx;
  color: #666;
}

.createdAt, .mes_type {
  margin-top: 50rpx;
}

.btom-btns {
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 150rpx;
}

.btom-btns view {
  width: 190rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 60rpx;
  font-size: 31rpx;
}

.btom-btns view.ignore{
  border: 1px solid #B5B5B5;
  color: #666;
}

.btom-btns view.solve{
  background-color: #E95207;
  border: 1px solid #E95207;
  color: #fff;
}
