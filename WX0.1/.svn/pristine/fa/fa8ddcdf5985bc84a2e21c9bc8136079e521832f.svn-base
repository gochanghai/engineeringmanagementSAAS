/* pages/managepersonnel/managepersonnel.wxss */

.top-info {
  width: 100%;
  height: 400rpx;
}

.top-info image {
  width: 100%;
  height: 100%;
}

.top-tab {
  display: flex;
  justify-content: space-between;
  width: 91%;
  position: absolute;
  top: 148rpx;
  left: 4.5%;
}

.top-tab view.tab-item {
  font-size: 32rpx;
  color: #fff;
}

.top-tab text.line {
  margin: 14rpx auto;
  display: block;
  width: 79%;
  height: 0;
  border-top: 6rpx solid;
  border-radius: 20px;
}

.content {
  position: absolute;
  top: 256rpx;
  width: 100%;
  height: auto;
}

.swiper-content {
  width: 100%;
}

.swiper-items {
  margin: 0 auto;
  width: 92%;
}

.t_info {
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
}

.t_info view.new-per {
  margin-top: 10rpx;
  font-size: 31rpx;
  color: #fff;
  font-weight: Medium;
}

.new_per {
  width: 42rpx;
  height: 42rpx;
}

.per_number {
  font-size: 60rpx;
  color: #fff;
}

.per_number text {
  font-size: 31rpx;
}

.information {
  margin-top: 6rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0px 20rpx 30rpx 12rpx #f0f0f0;
  overflow: auto;
  border: 1px solid #e5e5e5;
}

.information-item {
  padding-left: 24rpx;
  margin: 22rpx 0;
}

.item-line {
  margin: 0 auto;
  width: 90%;
  border-top: 1px solid #e5e5e5;
}

.information-item text {
  display: block;
  color: #333;
  font-weight: Medium;
  font-size: 33rpx;
  line-height: 60rpx;
}

.information-item view {
  color: #666;
  font-weight: Regular;
  font-size: 31rpx;
  line-height: 60rpx;
}
