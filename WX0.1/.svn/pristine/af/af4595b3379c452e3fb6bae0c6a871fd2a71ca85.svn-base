.container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.none_bg {
  position: absolute;
  left: 50%;
  top: 30%;
  margin-left: -180rpx;
  width: 360rpx;
  height: 300rpx;
}

.none_bg text {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.none_bg image {
  width: 360rpx;
  height: 250rpx;
}

.name image {
  width: 22rpx;
  height: 22rpx;
}

.mes-list-item {
  margin: 0 auto;
  margin-bottom: 20rpx;
  width: 93%;
  line-height: 100rpx;
  overflow: hidden;
  border-radius: 16rpx;
  box-shadow: 0px 0rpx 30rpx 10rpx #f0f0f0;
}

.mes-title {
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 90rpx;
  font-size: 31rpx;
  color: #333;
}

.mes-title text {
  font-size: 28rpx;
  color: #39f;
}

.mes-container {
  margin-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 30rpx;
  padding-bottom: 10rpx;
}

.mes-container image.status {
  margin-top: 15rpx;
  width: 76rpx;
  height: 76rpx;
}

.mes-container image.details {
  margin-left: 14rpx;
  width: 10rpx;
  height: 23rpx;
}

.progress, .security {
  position: relative;
  display: flex;
  justify-content: space-between;
}

.mes-con {
  padding-left: 20rpx;
  flex: 1;
}

.mes-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #e5e5e5;
  /* border: 1px solid; */
}

.mes-item:last-child {
  border: none;
}

.mes-item text.content {
  display: inline-block;
  height: 90rpx;
  width: 350rpx;
  font-size: 30rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mes-item text.date {
  display: inline-block;
  width: 170rpx;
  font-size: 29rpx;
  color: #999;
}

.mes-item text.status {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  text-align: center;
  color: #fff;
  border-radius: 50%;
}

.line {
  position: absolute;
  left: 2%;
  top: 110rpx;
  width: 98%;
  height: 0;
  border-bottom: 1px solid #e5e5e5;
}
