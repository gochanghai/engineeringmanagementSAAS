/* pages/confirmvalue/confirmvalue.wxss */

.top-info {
  width: 100%;
  position: relative;
  height: 290rpx;
}

.top-info image {
  width: 100%;
  height: 100%;
}

.number-info {
  width: 92%;
  position: absolute;
  top: 26rpx;
  left: 4%;
}

.top-total {
  display: flex;
  flex-direction: column;
  line-height: 58rpx;
}

.top-total text.txt {
  font-size: 32rpx;
  color: #fff;
}

.top-total text.val {
  font-size: 44rpx;
  color: #fff;
}

.perform-info {
  margin-top: 44rpx;
  display: flex;
  justify-content: space-between;
}

.perform-info view {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
}

.perform-info view image {
  align-items: center;
  margin-right: 13rpx;
  width: 34rpx;
  height: 34rpx;
}

.data_content {
  position: absolute;
  padding: 20rpx 0;
  left: 4%;
  margin-top: -50rpx;
  width: 92%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0px 10rpx 20rpx 10rpx #f0f0f0;
}

.list-data {
  padding: 0 26rpx;
}

.list-data view {
  font-size: 30rpx;
  line-height: 60rpx;
  color: #666;
}

.list-data view.line {
  margin: 20rpx auto;
  width: 98%;
  border-top: 1px solid #e5e5e5;
}
