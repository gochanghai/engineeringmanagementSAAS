/* pages/mespersonner/mespersonner.wxss */

.group-type {
  margin: 20rpx auto;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.group-list {
  margin: 0 auto;
  width: 92%;
}

.group-item {
  margin-bottom: 30rpx;
  display: flex;
}

.content {
  padding-left: 24rpx;
  display: flex;
  width: 464rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
}

.content view {
  font-size: 30rpx;
  text-align: left;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.all_select {
  margin: 0 auto;
  display: flex;
  align-items: center;
  width: 92%;
  font-size: 30rpx;
  color: #666;
  height: 100rpx;
}
