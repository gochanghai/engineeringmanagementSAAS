<!-- 修改密码 -->
<view class='container'>
  <view class='content'>
    <view class='userPwd-item'>
      <text>旧密码</text>
      <input type="password" bindinput="passwordInput"></input>
    </view>
    <view class='userPwd-item'>
      <text>新密码</text>
      <input type="password" bindinput="password1Input"></input>
    </view>
     <view class='userPwd-item'>
      <text>确认密码</text>
      <input type="password" bindinput="password2Input"></input>
    </view>
  </view>

  <view class="ok-btn" bindtap="save">完成</view>
</view>
